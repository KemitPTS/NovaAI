{
  "name": "@novaai/monorepo",
  "version": "1.0.0",
  "description": "NovaAI - A comprehensive AI platform monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "build:watch": "turbo run build --watch",
    "test": "turbo run test",
    "test:watch": "turbo run test --watch",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean:dist": "turbo run clean:dist",
    "publish": "turbo run build && changeset publish",
    "version": "changeset version",
    "preinstall": "npx only-allow npm"
  },
  "keywords": [
    "ai",
    "machine-learning",
    "novaai",
    "monorepo"
  ],
  "author": "KemitPTS",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "turbo": "^1.10.0",
    "typescript": "^5.3.0"
  }
}
